{
  "name": "recipe-finder-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:client": "npm run dev --workspace=@recipe-finder/client",
    "dev:server": "npm run dev --workspace=@recipe-finder/server",
    "dev": "concurrently \"npm:dev:client\" \"npm:dev:server\"",
    "build:client": "npm run build --workspace=@recipe-finder/client",
    "build:server": "npm run build --workspace=@recipe-finder/server",
    "build": "npm run build:client && npm run build:server",
    "lint:client": "npm run lint --workspace=@recipe-finder/client",
    "lint:server": "npm run lint --workspace=@recipe-finder/server",
    "lint": "npm run lint:client && npm run lint:server",
    "format:client": "npm run format --workspace=@recipe-finder/client",
    "format:server": "npm run format --workspace=@recipe-finder/server",
    "format": "npm run format:client && npm run format:server",
    "format:check:client": "npm run format:check --workspace=@recipe-finder/client",
    "format:check:server": "npm run format:check --workspace=@recipe-finder/server",
    "format:check": "npm run format:check:client && npm run format:check:server",
    "test:client": "npm run test --workspace=@recipe-finder/client",
    "test:server": "npm run test --workspace=@recipe-finder/server",
    "test": "npm run test:client && npm run test:server",
    "typecheck:client": "npm run typecheck --workspace=@recipe-finder/client",
    "typecheck:server": "npm run typecheck --workspace=@recipe-finder/server",
    "typecheck": "npm run typecheck:client && npm run typecheck:server",
    "build:check:client": "npm run typecheck --workspace=@recipe-finder/client",
    "build:check:server": "npm run typecheck --workspace=@recipe-finder/server",
    "build:check": "npm run build:check:client && npm run build:check:server"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.0",
    "@tailwindcss/vite": "^4.1.4",
    "axios": "^1.8.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.488.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.2.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.4",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0"
  }
}
